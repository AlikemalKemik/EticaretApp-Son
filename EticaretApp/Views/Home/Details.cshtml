@using EticaretApp.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}
<div id="product-details" class="container pb-5">
    <div class="row">

        <div class="col-md-6">
            <img src="/Upload/@Model.Image" class="img-responsive img fluid-rounded w-100">
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (Model.IsApproved)
                    {<span class="badge badge-primary">In Stock</span> }
                    else
                    {<span class="badge badge-danger">Out of Stock</span> }

                    
                    <span class="product-number">#2365656</span>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star" aria-hidden="true"></i>
                        <i class="fas fa-star" aria-hidden="true"></i>
                        <i class="fas fa-star-half" aria-hidden="true"></i>
                        <span class="badge badge-success">53</span>

                    </div>
                    <div class="col-md-7"><a href="#">write a review</a></div>
                </div>


            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    <h4 id="product-price">@Model.Price TL</h4>

                </div>
                <div class="col-md-12">
                    
                    @using (Html.BeginForm("AddToCart","Cart"))
                    { 
                        @Html.HiddenFor(i=>i.Id)

                        <button type="submit" class="btn btn-success">
                        <i class="fas fa-cart-plus" aria-hidden="true"></i>
                        Add to Cart
                              </button>

                    }

                   
                    


                </div>
            </div>

        </div>
    </div>

    
</div>

